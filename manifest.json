{
    "manifest_version": 3,
    "name": "AutoTab AI",
    "version": "1.0",
    "description": "AI-powered text autocompletion for any text field",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [ "https://*/*"],
    "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["popup/index.css"],
      "run_at": "document_end"
    }],
    "action": {
      "default_popup": "popup/index.html",
      "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
      }
    },
    "icons": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  }